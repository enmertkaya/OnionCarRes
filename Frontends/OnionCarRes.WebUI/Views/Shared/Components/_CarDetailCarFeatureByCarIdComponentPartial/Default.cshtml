@model List<ResultCarFeatureByCarIdDto>

<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <div class="row">
        @foreach (var chunk in Model.Chunk(4))
        {
            <div class="col-md-3">
                <ul class="features">
                    @foreach (var item in chunk)
                    {
                        <li class="@((item.Available == true) ? "check" : "remove")"><span class="ion-ios-checkmark"></span>@item.FeatureName</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
